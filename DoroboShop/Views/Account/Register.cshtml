@model DoroboShop.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

    <div class="login-wrap">
        <div class="login-html">
            <input id="tab-2" type="radio" name="tab" class="sign-up" checked><label for="tab-2" class="tab">Sign Up</label>
            <div class="login-form">

                <div class="sign-up-htm">

                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="group">
                            <label for="pass" class="label">Email Address</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "input", id = "pass" })
                        </div>

                        <div class="group">
                            <label for="pass" class="label">Password</label>
                            @Html.PasswordFor(m => m.Password, new { @class = "input", @id = "pass" })
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Repeat Password</label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input", @id = "pass" })

                        </div>
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="group">
                            <input type="submit" class="button" value="Sign Up">
                        </div>
                    }


                    <div class="hr"></div>
                    <div class="foot-lnk">
                        <label for="tab-1">Already Member?</label>
                    </div>
                </div>



            </div>
        </div>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
